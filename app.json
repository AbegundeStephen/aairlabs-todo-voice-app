{
  "expo": {
    "name": "AAIRLABS-todo-voice-app",
    "slug": "AAIR-todo-voice-app",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/todo_voice_app.png",
    "userInterfaceStyle": "light",
    "jsEngine": "hermes",
    "newArchEnabled": true,
    "scheme": "aairlabs",
    "splash": {
      "image": "./assets/todo_voice_app.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSMicrophoneUsageDescription": "This app requires microphone access to add tasks via voice input."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/todo_voice_app.png",
        "backgroundColor": "#ffffff"
      },
      "permissions": [
        "RECORD_AUDIO",
        "android.permission.RECORD_AUDIO",
        "android.permission.MODIFY_AUDIO_SETTINGS",
        "RECORD_AUDIO",
        "android.permission.RECORD_AUDIO",
        "android.permission.MODIFY_AUDIO_SETTINGS"
      ],
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "package": "com.abegunde93.aairlabstodovoiceapp"
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      [
        "expo-av",
        {
          "microphonePermission": "Allow aairlabs-todo-voice-app to access your microphone for voice input."
        }
      ],
      "expo-audio",
      "expo-font"
    ],
    "extra": {
      "eas": {
        "projectId": "your-project-id-here"
      }
    }
  }
}
